{
  "variables": {
      "aws_region": "us-east-1",
      "aws_access_key": "{{env `AWS_ACCESS_KEY` }}",
      "aws_secret_key": "{{env `AWS_SECRET_KEY` }}",
      "source_ami_id": "ami-085925f297f89fce1",
      "ssh_user": "ubuntu",
      "version": "0.0.1",
      "commit_hash": "{{env `DRONE_COMMIT`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key` }}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "{{ user `aws_region`}}",
      "source_ami": "{{ user `source_ami_id` }}",
      "instance_type": "t2.micro",
      "ssh_username": "{{ user `ssh_user`}}",
      "ami_name": "Apache/PHP-{{ user `version`}}-{{ user `commit_hash` }}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/instala_ansible.sh",
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "ansible",
      "user": "{{ user `ssh_user`}}",
      "playbook_file": "./ansible/provision.yml",
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=false"
      ]
    },
    {
      "type": "file",
      "source": "tests/test_apache_php.py",
      "destination": "/tmp/test_apache_php.py"
    },
    {
      "type": "shell",
      "inline": [
        "sudo pip install testinfra",
        "sudo pytest -v /tmp/test_apache_php.py"
      ]
    }
  ]

}